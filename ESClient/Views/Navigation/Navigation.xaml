<UserControl x:Class="ESClient.Views.Navigation.Navigation"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ESClient.Views.Navigation"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             x:Name="root"
             xmlns:iconPacks="http://metro.mahapps.com/winfx/xaml/iconpacks"
             d:DesignHeight="450" d:DesignWidth="800" Width="250">
    <Grid>
        <StackPanel>
            
            <TextBlock Text="{Binding Title}"/>
            <local:Filter />
            <local:Search />
            <Button>
                <DockPanel>
                    <iconPacks:PackIconMaterial Kind="PlusBox"/>
                    <TextBlock Text="ゲームを追加" />
                </DockPanel>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
